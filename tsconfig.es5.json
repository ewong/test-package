  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES5",
    "sourceMap": true,
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist/es5",
    "noImplicitAny": true,
    "declaration": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
